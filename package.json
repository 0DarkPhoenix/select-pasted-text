{
	"name": "select-pasted-text",
	"displayName": "Select Pasted Text",
	"description": "Lightweight QoL tool which selects the text you just pasted in",
	"publisher": "DarkPhoenix",
	"version": "1.3.1",
	"engines": {
		"vscode": "^1.89.0"
	},
	"icon": "images/logo.png",
	"categories": ["Other"],
	"main": "./extension.js",
	"activationEvents": ["onStartupFinished"],
	"repository": {
		"type": "git",
		"url": "https://github.com/0DarkPhoenix/select-pasted-text.git"
	},
	"contributes": {
		"commands": [
			{
				"command": "selectPastedText.selectPastedText",
				"title": "Select Pasted Text"
			}
		],
		"keybindings": [
			{
				"command": "selectPastedText.selectPastedText",
				"key": "ctrl+v",
				"when": "editorTextFocus && !isMac"
			},
			{
				"command": "selectPastedText.selectPastedText",
				"key": "cmd+v",
				"when": "editorTextFocus && isMac"
			}
		],
		"configuration": {
			"type": "object",
			"properties": {
				"select-pasted-text.vscodevimfix": {
					"type": "boolean",
					"default": false,
					"description": "(Requires extension restart) This fix resolves a compatibility issue with Vim for VSCode; however, it disables the behavior that appends the next keystroke at the end of the selectionâ€”instead, the keystroke overwrites the selection."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.89.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5"
	}
}
